# Socket Proxy Configuration
SP_VERSION={{ sp_version | default('1.10.0') }}

# Log level: DEBUG, INFO, WARN, ERROR
SP_LOGLEVEL={{ sp_loglevel | default('info') }}

# Docker group ID (will be set dynamically)
DOCKER_GID={{ t_docker_gid }}

# Comma-separated list of hostnames or IP networks allowed to connect
# Examples: 'traefik,portainer' or '172.18.0.0/16'
SP_ALLOWFROM={{ sp_allowfrom | default('127.0.0.1/32') }}

# Allowed GET requests (regex pattern)
# Default: version, containers, events (suitable for Traefik, Portainer)
SP_ALLOW_GET={{ sp_allow_get | default('/v1\..{1,2}/(version|containers/.*|networks/.*|services/.*|tasks/.*|nodes/.*|events.*)') }}

# Allowed HEAD requests (regex pattern)
SP_ALLOW_HEAD={{ sp_allow_head | default('.*') }}

# Allowed POST requests (regex pattern)
# Default: empty (no POST allowed by default)
SP_ALLOW_POST={{ sp_allow_post | default('') }}

# Watchdog interval in seconds (check socket availability)
SP_WATCHDOG_INTERVAL={{ sp_watchdog_interval | default('3600') }}

COMPOSE_PROJECT_NAME=socket-proxy
