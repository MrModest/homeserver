server:
  http_listen_port: 9080
  grpc_listen_port: 0

positions:
  filename: /tmp/positions.yaml

clients:
  - url: http://loki:3100/loki/api/v1/push

scrape_configs:
  - job_name: varlogs
    static_configs:
      - targets: [localhost]
        labels:
          job: varlogs
          __path__: /var/log/*log
  - job_name: kopia_cli_logs
    static_configs:
      - targets: [localhost]
        labels:
          job: kopia_cli_logs
          __path__: {{ p_dirs.apps_data }}/kopia/logs/cli-logs/*log
  - job_name: kopia_content_logs
    static_configs:
      - targets: [localhost]
        labels:
          job: kopia_content_logs
          __path__: {{ p_dirs.apps_data }}/kopia/logs/content-logs/*log
  - job_name: docker_log_scrape
    docker_sd_configs:
      - host: unix:///var/run/docker.sock
        refresh_interval: 10s
    relabel_configs:
      - source_labels: ['__meta_docker_container_name']
        regex: '/(.*)'
        target_label: 'container'
      - source_labels: ['__meta_docker_container_log_stream']
        target_label: 'logstream'
      - source_labels: ['__meta_docker_container_label_logging_jobname']
        target_label: 'job'
