global:
  scrape_interval:     5s 
  evaluation_interval: 5s 

rule_files:
  # - "first.rules"
  # - "second.rules"

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['host.docker.internal:{{ obs_apps_ports.prometheus }}']
  - job_name: 'docker'
    static_configs:
      - targets: ['host.docker.internal:{{ obs_apps_ports.docker_metrics }}']
  - job_name: 'cadvisor'
    static_configs:
      - targets: ['host.docker.internal:{{ obs_apps_ports.cadvisor }}']